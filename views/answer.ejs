<html>
    <head>
        <title>
            Ответы
        </title>
        <link rel="stylesheet" href="./style.css">
    </head>
    <body>
        <h1>PHP сервер - лучший сервер</h1>
        <table>
            <thead>
                <tr>
                    <td class="f">
                        Номер
                    </td>
                    <td class="n">
                        Вопросы
                    </td>
                    <td class="n">
                        Ответы
                    </td>
                </tr>
            </thead>
            <tbody>
                    <% answers.forEach((answer, index)=>{ %>
                        <tr>
                            <td class="f">
                                <%=index+1%>                     
                            </td>
                            <% if(answer.quest) {%>
                            <td class="n">
                                <%-answer.quest.replace(/src="/g,'src="http://edu.tltsu.ru')%>                     
                            </td>
                            <% } if(answer.text){ %>
                            <td class="n">
                                <%-answer.text.replace(/src="/g,'src="http://edu.tltsu.ru')%>
                            </td>
                            <%}%>
                        </tr>
                    <%})%>
            </tbody>
        </table>
    </body>
</html>